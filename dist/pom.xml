<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>co.fastcat.fastcatsearch</groupId>
	<artifactId>fastcatsearch-dist</artifactId>
	<name>fastcatsearch-dist</name>
	<description>fastcatsearch/dist</description>
	<packaging>pom</packaging>
	<parent>
		<groupId>co.fastcat</groupId>
		<artifactId>fastcatsearch</artifactId>
		<version>3.27.2</version>
	</parent>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<packageBaseDir>${project.basedir}/..</packageBaseDir>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.4.2</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<overwrite>true</overwrite>
							<outputDirectory>${project.parent.build.directory}/${project.parent.artifactId}-${project.version}/</outputDirectory>
							<resources>
								<resource>
									<directory>${project.parent.basedir}/production</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-lib</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<overwrite>true</overwrite>
							<outputDirectory>${project.parent.build.directory}/${project.parent.artifactId}-${project.version}/lib</outputDirectory>
							<resources>
								<resource>
									<directory>${project.parent.basedir}/core/target</directory>
									<includes>
										<include>${project.parent.artifactId}-core-${project.version}.jar</include>
										<include>${project.parent.artifactId}-core-${project.version}-sources.jar</include>
										<include>${project.parent.artifactId}-core-${project.version}-javadoc.jar</include>
									</includes>
								</resource>
								<resource>
									<directory>${project.parent.basedir}/server/target/lib</directory>
								</resource>
								<resource>
									<directory>${project.parent.basedir}/server/target</directory>
									<includes>
										<include>${project.parent.artifactId}-server-${project.version}.jar</include>
										<include>${project.parent.artifactId}-server-${project.version}-sources.jar</include>
										<include>${project.parent.artifactId}-server-${project.version}-javadoc.jar</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-war</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<overwrite>true</overwrite>
							<outputDirectory>${project.parent.build.directory}/${project.parent.artifactId}-${project.version}</outputDirectory>
							<resources>
								<resource>
									<directory>${project.parent.basedir}/web/target</directory>
									<includes>
										<include>${project.parent.artifactId}-web.war</include>
									</includes>
								</resource>
							</resources>
						</configuration>
					</execution>
					<execution>
						<id>copy-yajsw</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<overwrite>true</overwrite>
							<outputDirectory>${project.parent.build.directory}/${project.parent.artifactId}-${project.version}/service/</outputDirectory>
							<resources>
								<resource>
									<directory>${project.parent.basedir}/server/target/yajsw</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
